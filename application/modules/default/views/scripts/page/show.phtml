<!-- entry START -->
<div class="entry">
    <div class="entryHead">
        <h2><span><?php echo $this->escape($this->page['title']) ?></span></h2>
        <p><?php echo $this->page['update_date'] ?></p>
    </div>
    <dl class="category">
        <dt>カテゴリー：</dt>
        <dd>
            <a href="<?php echo $this->baseUrl('page/category/id/') . $this->category['id'] ?>"><?php echo $this->escape($this->category['name']) ?></a>
        </dd>
    </dl>
    <div class="entryBody">
        <?php echo $this->page['contents'] . "\n" ?>
        <dl class="entryTag">
            <dt>タグ：</dt>
            <?php if (count($this->tags) > 0): ?>
                <?php foreach ($this->tags as $cnt => $tag): ?>
                <dd><a href="<?php echo $this->baseUrl('page/tag/id/') . $tag['id'] ?>"><?php echo $this->escape($tag['name']) ?></a></dd>
                <?php endforeach ?>
            <?php else: ?>
                <dd>なし</dd>
            <?php endif; ?>
        </dl>
    </div>

    <div class="socialButton">
        <ul>
            <li class="twitter">
                <a href="https://twitter.com/share" class="twitter-share-button" data-lang="ja">ツイート</a>
            </li>
            <li class="hatena">
