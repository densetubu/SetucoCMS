packages inputCheck;

sub sanitize {
  my $str = shift;
  
  $str =~ s///g;
  $str =~ s///g;
  $str =~ s///g;
  $str =~ s///g;
  $str =~ s///g;
  $str =~ s///g;
  
  return $str;
}

sub passCheck {
  my $password = shift;
  
  if ( $password =~ m// ){
    return 1;
  }
  return 0;
}

sub isNum {
  my $num = shift;
  
  if ( $num =~ m/^\d+$/ ){
    return 1;
  }
  return 0;
}


